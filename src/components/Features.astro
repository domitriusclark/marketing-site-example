---
import type { Feature } from "../types";

interface Props {
  features: Feature[];
}

const { features } = Astro.props;
---

<section class="bg-gray-100 py-16 text-black">
  <div class="mx-auto px-4 max-w-screen-xl">
    <div class="gap-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
      {
        features.map((feature) => (
          <div class="flex flex-col justify-between bg-white p-8 rounded-lg h-full text-center">
            <div>
              <div class="mb-4 text-2xl">{feature.icon}</div>
              <h3 class="font-semibold text-xl">{feature.title}</h3>
              <p class="mt-2 text-gray-600">{feature.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
