---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li
  class="flex bg-[#23262d] bg-[length:400%] bg-[position:100%] hover:bg-[position:0] hover:bg-[var(--accent-gradient)] focus-within:bg-[position:0] focus-within:bg-[var(--accent-gradient)] bg-none shadow-[inset_0_0_0_1px_rgba(255,255,255,0.1)] p-[1px] rounded-[7px] transition-[background-position] duration-[600ms] list-none ease-[cubic-bezier(0.22,1,0.36,1)]"
>
  <a
    href={href}
    class="bg-[#23262d] opacity-80 p-[calc(1.5rem-1px)] rounded-[8px] w-full text-white no-underline leading-[1.4]"
  >
    <h2
      class="m-0 text-[1.25rem] hover:text-[rgb(var(--accent-light))] focus-within:text-[rgb(var(--accent-light))] transition-colors duration-[600ms] ease-[cubic-bezier(0.22,1,0.36,1)]"
    >
      {title}
      <span>&rarr;</span>
    </h2>
    <p class="mt-[0.5rem] mb-0">
      {body}
    </p>
  </a>
</li>
